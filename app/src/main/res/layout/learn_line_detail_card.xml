<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_marginBottom="@dimen/margin_16dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/margin_4dp"
        android:elevation="@dimen/margin_4dp"
        android:id="@+id/card_feed_photo"
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <ImageView
            android:id="@+id/iv_feed_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <WebView
            android:visibility="gone"
            android:id="@+id/wv_website"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/player_view"
            android:layout_width="@dimen/size_72dp"
            android:layout_height="@dimen/size_72dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/play_ic_circle"
            tools:visibility="visible" />

        <Button
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textSize="@dimen/textsize_16sp"
            android:layout_gravity="bottom"
            android:text="@string/open_new_page"
            android:id="@+id/btn_new_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>